@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me to Increment</button>

<button class="btn btn-danger" @onclick="DecrementCount">Click Me to Decrement</button>

<button class="btn btn-warning" @onclick="ResetCount">Click me to Reset</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}
